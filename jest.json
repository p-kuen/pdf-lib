{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "coverageReporters": ["html"],
  "testMatch": ["<rootDir>/tests/**/*.spec.ts"],
  "roots": ["src", "tests"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  }
}
